{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 8000
    },
    "functions": {
      "port": 8001
    },
    "firestore": {
      "port": 8002
    },
    "database": {
      "port": 8003
    },
    "pubsub": {
      "port": 8004
    },
    "storage": {
      "port": 8005
    },
    "eventarc": {
      "port": 8006
    },
    "ui": {
      "enabled": true,
      "port": 8008
    },
    "singleProjectMode": true
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
