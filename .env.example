# ============= FRONTEND CONFIGURATION =============

# Firebase Configuration (Frontend)
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# API Configuration
VITE_API_BASE_URL=http://localhost:3001

# Environment
VITE_NODE_ENV=development

# ============= BACKEND CONFIGURATION =============

# Firebase Admin SDK (Backend)
TYPE=service_account
PROJECT_ID=your_project_id
PRIVATE_KEY_ID=your_private_key_id
PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
CLIENT_ID=your_client_id
AUTH_URI=https://accounts.google.com/o/oauth2/auth
TOKEN_URI=https://oauth2.googleapis.com/token
AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk
UNIVERSE_DOMAIN=googleapis.com
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# React App Firebase Config (for backend validation)
REACT_APP_FIREBASE_KEY=your_firebase_api_key_here
REACT_APP_AUTH_DOMAIN=your_project.firebaseapp.com

# ============= EMAIL CONFIGURATION =============

# Email Service Settings
EMAIL_HOST=smtp.office365.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=kyc@nem-insurance.com

# Option 1: App-Specific Password (Simpler, less secure)
# Generate an app-specific password from your email provider
EMAIL_PASS=your_app_specific_password_here

# Option 2: OAuth2 (Recommended, more secure)
# Leave EMAIL_PASS empty if using OAuth2
# Get these from your email provider's OAuth2 setup
# EMAIL_CLIENT_ID=your_oauth2_client_id
# EMAIL_CLIENT_SECRET=your_oauth2_client_secret
# EMAIL_REFRESH_TOKEN=your_oauth2_refresh_token

# ============= SECURITY CONFIGURATION =============

# Events Logging
EVENTS_IP_SALT=your_random_salt_for_ip_hashing
ENABLE_IP_GEOLOCATION=false
RAW_IP_RETENTION_DAYS=30
ENABLE_EVENTS_LOGGING=true

# CORS Configuration (Optional - add additional allowed origins)
# ADDITIONAL_ALLOWED_ORIGINS=https://staging.nemforms.com,https://test.nemforms.com

# Server Configuration
PORT=3001
NODE_ENV=development
